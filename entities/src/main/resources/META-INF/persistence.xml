<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="analysis-result-jpa-unit" transaction-type="RESOURCE_LOCAL">

        <non-jta-data-source>jdbc/analysis-result-db</non-jta-data-source>

        <class>codes.mydna.entities.BaseEntity</class>
        <class>codes.mydna.entities.AnalysisResultEntity</class>
        <class>codes.mydna.entities.FoundGeneEntity</class>
        <class>codes.mydna.entities.GeneOverlapEntity</class>
        <class>codes.mydna.entities.FoundEnzymeEntity</class>
        <class>codes.mydna.entities.EnzymeCutEntity</class>

        <properties>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.default_schema" value="public"/>
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.show_sql" value="false"/>
            <!-- For development only -->
<!--            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>-->
<!--            <property name="javax.persistence.schema-generation.database.action" value="create"/>-->
        </properties>
    </persistence-unit>
</persistence>